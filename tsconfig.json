{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "paths": {
      "shared:*": [
        "./src/shared/*"
      ],
      "window:*": [
        "./src/electron/*"
      ],
      "page:*": [
        "./src/page/*"
      ],
      "build:*": [
        "./src/build-step/*"
      ]
    },
    "resolveJsonModule": true
  }
}
